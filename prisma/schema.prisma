generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String
  password String
  Task     Task[]

  @@map("users")
}

model Task {
  id        String   @id @default(uuid())
  name      String
  createdBy User     @relation(fields: [userId], references: [id])
  text      String
  startDate DateTime
  endDate   DateTime
  status    Boolean  @default(false)

  userId String
}
